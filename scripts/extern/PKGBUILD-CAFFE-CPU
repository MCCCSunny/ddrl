# Maintainer: Micah Chambers <micahc.vt@gmail.com>

pkgname=caffe
pkgver=git
pkgrel=1
pkgdesc="Neural network toolkit"
arch=('x86_64')
url="https://github.com/BVLC/caffe"
license=('BSD')
groups=('base-devel')
depends=('hdf5' 'boost' 'protobuf' 'google-glog'
		 'gflags' 'leveldb' 'snappy' 'lmdb' 'xz>=5' 
		 'openblas-lapack' 
		 )
makedepends=('git' 'cmake')
source=("git+https://github.com/BVLC/caffe.git" 
	"https://matthieu-zimmer.net/~matthieu/patches/euclidean_ws_loss_layer.cpp" 
	"https://matthieu-zimmer.net/~matthieu/patches/euclidean_ws_loss_layer.hpp" 
	"https://matthieu-zimmer.net/~matthieu/patches/caffe-git.patch")
sha256sums=('SKIP' 'SKIP' 'SKIP' 'SKIP')

prepare(){
 cd "${srcdir}"
 patch -Np0 -i ${pkgname}-${pkgver}.patch
 cp euclidean_ws_loss_layer.cpp caffe/src/caffe/layers/
 cp euclidean_ws_loss_layer.hpp caffe/include/caffe/layers/
}

build() {
    cd "$srcdir/$pkgname"
    rm -fr build
    mkdir build
    cd build
    
    cmake ../ -DBLAS=Open -DBUILD_python=OFF -DUSE_OPENCV=OFF \
                -DCMAKE_INSTALL_PREFIX=$pkgdir/usr/ -DCPU_ONLY=On

    make all -j4
}

package() {
        cd "$srcdir/$pkgname/build"
        make install
}
